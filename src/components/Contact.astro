<style>
	.contact {
		background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
	}

	.contact-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		margin-bottom: 4rem;
	}

	.contact-info {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2rem;
	}

	.contact-card {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
		text-align: center;
		transition: transform 0.3s ease;
	}

	.contact-card:hover {
		transform: translateY(-4px);
	}

	.contact-icon {
		display: flex;
		justify-content: center;
		margin-bottom: 1rem;
		padding: 1rem;
		background: rgba(139, 69, 19, 0.1);
		border-radius: 50%;
		width: 64px;
		height: 64px;
		margin-left: auto;
		margin-right: auto;
	}

	.contact-card h3 {
		font-size: 1.3rem;
		color: #2d2d2d;
		margin-bottom: 1rem;
	}

	.contact-card p {
		color: #555;
		line-height: 1.5;
		margin: 0;
	}

	.contact-card small {
		color: #8B4513;
		font-weight: 500;
	}

	.location-info {
		background: white;
		padding: 2.5rem;
		border-radius: 16px;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
	}

	.location-info h3 {
		font-size: 1.8rem;
		color: #2d2d2d;
		margin-bottom: 1.5rem;
	}

	.location-info > p {
		font-size: 1.1rem;
		line-height: 1.6;
		color: #555;
		margin-bottom: 2rem;
	}

	.transport-options {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.transport-card {
		background: #f8f9fa;
		padding: 1.5rem;
		border-radius: 8px;
		border-left: 4px solid #8B4513;
	}

	.transport-card h4 {
		font-size: 1.1rem;
		color: #2d2d2d;
		margin-bottom: 0.8rem;
	}

	.transport-card p {
		color: #666;
		line-height: 1.5;
		margin: 0;
	}

	.purchase-notice {
		margin-bottom: 4rem;
	}

	.notice-card {
		background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
		color: white;
		padding: 3rem;
		border-radius: 16px;
		position: relative;
		overflow: hidden;
	}

	.notice-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="1" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
		opacity: 0.3;
	}

	.notice-card > * {
		position: relative;
		z-index: 2;
	}

	.notice-card h3 {
		text-align: center;
		font-size: 1.8rem;
		margin-bottom: 2rem;
		color: #FFD700;
	}

	.notice-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1.5rem;
	}

	.notice-item {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.notice-item strong {
		color: #FFD700;
		font-size: 1.1rem;
	}

	.notice-item span {
		color: rgba(255, 255, 255, 0.9);
		line-height: 1.5;
	}

	.contact-cta {
		text-align: center;
		background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
		color: white;
		padding: 3rem;
		border-radius: 16px;
		position: relative;
		overflow: hidden;
	}

	.contact-cta::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 60 60"><circle cx="30" cy="30" r="1" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
		opacity: 0.3;
	}

	.contact-cta > * {
		position: relative;
		z-index: 2;
	}

	.contact-cta h3 {
		font-size: 2rem;
		margin-bottom: 1rem;
		color: #FFD700;
	}

	.contact-cta > p {
		font-size: 1.2rem;
		margin-bottom: 2rem;
		color: rgba(255, 255, 255, 0.9);
	}

	.purchase-methods {
		display: flex;
		justify-content: center;
		gap: 3rem;
		flex-wrap: wrap;
	}

	.method {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		min-width: 200px;
	}

	.method strong {
		font-size: 1.3rem;
		color: #FFD700;
	}

	.method span {
		color: rgba(255, 255, 255, 0.9);
		text-align: center;
	}

	.whatsapp-link {
		color: #25D366;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.3s ease;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
	}

	.whatsapp-link:hover {
		color: #128C7E;
		transform: scale(1.05);
	}

	.whatsapp-link::before {
		content: 'üí¨';
		font-size: 1.2em;
	}

	@media (max-width: 768px) {
		.contact-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.contact-info {
			grid-template-columns: 1fr;
		}

		.location-info {
			padding: 2rem;
		}

		.notice-grid {
			grid-template-columns: 1fr;
		}

		.contact-cta {
			padding: 2rem;
		}

		.contact-cta h3 {
			font-size: 1.7rem;
		}

		.purchase-methods {
			flex-direction: column;
			gap: 1.5rem;
		}

		.method {
			min-width: auto;
		}
	}
</style>
