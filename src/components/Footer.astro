<style>
	.footer {
		background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
		color: white;
		position: relative;
		overflow: hidden;
	}

	.footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="25" cy="25" r="1" fill="rgba(139,69,19,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(139,69,19,0.1)"/></svg>') repeat;
		opacity: 0.3;
	}

	.footer-content {
		display: grid;
		grid-template-columns: 2fr 1fr 1fr 1.5fr;
		gap: 3rem;
		padding: 4rem 0;
		position: relative;
		z-index: 2;
	}

	.footer-section h3 {
		font-size: 1.8rem;
		color: #FFD700;
		margin-bottom: 1rem;
		font-weight: 700;
	}

	.footer-section h4 {
		font-size: 1.3rem;
		color: #8B4513;
		margin-bottom: 1.5rem;
		font-weight: 600;
	}

	.footer-section p {
		line-height: 1.6;
		color: rgba(255, 255, 255, 0.8);
		margin-bottom: 2rem;
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 44px;
		height: 44px;
		background: rgba(139, 69, 19, 0.2);
		border-radius: 50%;
		color: #8B4513;
		transition: all 0.3s ease;
		border: 2px solid transparent;
	}

	.social-links a:hover {
		background: #8B4513;
		color: white;
		border-color: #FFD700;
		transform: translateY(-2px);
	}

	.footer-links {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.footer-links li {
		margin-bottom: 0.8rem;
	}

	.footer-links a {
		color: rgba(255, 255, 255, 0.7);
		text-decoration: none;
		transition: color 0.3s ease;
		display: flex;
		align-items: center;
	}

	.footer-links a:hover {
		color: #8B4513;
	}

	.footer-links a::before {
		content: 'â–¸';
		margin-right: 0.5rem;
		color: #8B4513;
		font-size: 0.8rem;
	}

	.contact-info {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.contact-item {
		display: flex;
		align-items: flex-start;
		gap: 0.8rem;
	}

	.contact-item svg {
		color: #8B4513;
		margin-top: 0.2rem;
		flex-shrink: 0;
	}

	.contact-item span {
		color: rgba(255, 255, 255, 0.8);
		line-height: 1.4;
	}

	.footer-whatsapp {
		color: #25D366;
		text-decoration: none;
		transition: all 0.3s ease;
		line-height: 1.4;
	}

	.footer-whatsapp:hover {
		color: #128C7E;
		text-decoration: underline;
	}

	.footer-bottom {
		border-top: 1px solid rgba(139, 69, 19, 0.3);
		padding: 2rem 0;
		position: relative;
		z-index: 2;
	}

	.footer-bottom-content {
		text-align: center;
	}

	.footer-bottom p {
		margin: 0.5rem 0;
		color: rgba(255, 255, 255, 0.6);
	}

	.footer-note {
		font-style: italic;
		color: #8B4513;
		font-size: 0.9rem;
	}

	@media (max-width: 768px) {
		.footer-content {
			grid-template-columns: 1fr;
			gap: 2rem;
			padding: 3rem 0;
		}

		.footer-section h3 {
			font-size: 1.5rem;
		}

		.footer-section h4 {
			font-size: 1.2rem;
		}

		.social-links {
			justify-content: center;
		}

		.contact-info {
			text-align: left;
		}

		.footer-bottom {
			padding: 1.5rem 0;
		}
	}
</style>
